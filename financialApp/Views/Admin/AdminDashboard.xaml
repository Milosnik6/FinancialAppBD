<Window x:Class="financialApp.Views.Admin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="AdminButton" Content="Admin Function" Visibility="Visible" />
            <TextBox x:Name="UsernameTextBox" Margin="5"  Tag="Username"/>
            <PasswordBox x:Name="PasswordTextBox" Margin="5"  Tag="Password"/>
            <TextBox x:Name="EmailTextBox" Margin="5" Tag="Email"/>
            <Button Content="Add User" Click="AddUser_Click" Margin="5"/>
            <Button Content="Update User" Click="UpdateUser_Click" Margin="5"/>
            <Button Content="Delete User" Click="DeleteUser_Click" Margin="5"/>
            <ListView x:Name="UsersListView" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
