<Window x:Class="financialApp.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Tag="Username" Margin="5"/>
            <TextBox x:Name="EmailTextBox" Tag="Email" Margin="5"/>
            <PasswordBox x:Name="PasswordBox"
             
             Tag="Password" Margin="5"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
             
             Tag="Confirm Password" Margin="5"/>
            <Button Content="Register" Click="Register_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
